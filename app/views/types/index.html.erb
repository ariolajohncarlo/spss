<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User type</th>
      <th>User description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.user_type %></td>
        <td><%= type.user_description %></td>
        <td>
          <%= link_to 'Show', type %>
          <%= link_to 'Edit', edit_type_path(type) %>
          <%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path %>
