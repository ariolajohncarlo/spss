<%= form_for(supplier, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% supplier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>

  <!-- Form Name -->
  <legend align="center" class="newtitle"><br>CREATE SUPPLIER</legend>

  
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      <%= f.label :company_code, "Company Code"%>
    </label>
    <div class="col-md-6">
      <%= f.text_field :company_code, :class => 'form-control input-md' %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      <%= f.label :company_name, "Company Name"%>
    </label>
    <div class="col-md-6">
      <%= f.text_field :company_name, :class => 'form-control input-md' %>
<!--      <input type="text" name="p_number" class="form-control input-md" required>-->
    </div>
  </div>

  <!-- Company Address input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      Address
    </label>
    <div class="col-md-6">
      <%= f.text_field :address, :class => 'form-control input-md' %>
<!--      <input type="text" name="p_number" class="form-control input-md" required>-->
    </div>
  </div>

  <!-- Contact Number input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">Contact Number</label>
    <div class="col-md-6">
      <%= f.text_field :contact_number,  :class => 'form-control input-md' %>
<!--      <input type="text" name="p_number" class="form-control input-md" required>-->
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8"></div>
    <div class="col-md-2">
      <%= f.submit 'Add Supplier', :class => 'btn btn-success' %>
<!--
      <button type="submit" class="btn btn-success">
        <span class="glyphicon glyphicon-plus-sign" style="padding-right:10"></span>Add Supplier
      </button>
-->
    </div>
  </div>

</fieldset>
<% end %>
