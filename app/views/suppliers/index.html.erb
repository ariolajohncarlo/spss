<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Company Code</th>
      <th>Company Name</th>
      <th>Address</th>
      <th>Contact Number</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.company_code %></td>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.contact_number %></td>
        <td class="action_area">
		  <button onclick=window.location.href='/suppliers/<%= supplier.id%>' class="btn btn-info btn-xs">Show</button>
          <button onclick=window.location.href='/suppliers/<%= supplier.id%>/edit' class="btn btn-warning btn-xs">Edit</button>
          <button onclick=window.location.href='/suppliers/<%= supplier.id%>/destroy' class="btn btn-danger btn-xs">Destroy</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path %>
