<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-bordered top">
      <tr>
        <td>
          <strong>Package name:</strong>
        </td>
        <td>
          <%= @package.package_name %>
        </td>
      </tr>

      <tr>
        <td>
          <strong>Cost:</strong>
        </td>
        <td>
        <%= number_with_precision(@package.cost, :precision => 2, :delimiter => ',') %>
        </td>
      </tr>
      
      <tr>
        <td>
          <strong>Kilowatthour Consumption:</strong>
        </td>
        <td>
          <%= @package.kilowatthour_consumption %>
        </td>
      </tr>
      
    </table>

  </div>
</div>

<% if @package.components.size > 0 then %>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 ">
    <table class="table table-hover">
      <tr>
        <th>Component ID</th>
        <th>Description</th>
        <th>Quantity</th>
      </tr>
  
      <% ComponentPackage.where("package_id == #{@package.id}").each do |cp|%>
      <% cid = cp.component_id%>
      <tr>
        <td>
          <%= Component.find(cid).component_id %>
        </td>
        <td>
          <%= Component.find(cid).component_description %>
        </td>
        <td class="center">
          <%= cp.quantity %>
        </td>
      </tr>
      <%end%>
  
    </table>
  </div>
</div>

<% end %>