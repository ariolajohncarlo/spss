<%= form_tag "find", :method => :post, :class => 'form-horizontal' do %>
<fieldset>
  
  <!-- Form Name -->
  <legend align="center" class="newtitle"><br>FIND THE IDEAL PACKAGE</legend>
  
  <div class="form-group">
    <label class="col-md-3 control-label" for="p_number">Budget:</label>
    <div class="col-md-7">
      <%= number_field_tag :budget, "", :class => 'form-control input-md' %>
    </div>
  </div>
  
    <!-- Company Address input-->
  <div class="form-group">
    <label class="col-md-3 control-label" for="p_number">Consumption:</label>
    <div class="col-md-7">
      <%= number_field_tag :consumption, "", :class => 'form-control input-md'%>
    </div>
  </div>  
  
  <div class="form-group">
    <div class="col-md-10 control-label">
      <%= submit_tag "Find", :class => 'btn btn-success'%>
    </div>
  </div>
  
</fieldset>
<% end %>