<%= form_for(package, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<fieldset>
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      <%= f.label :package_name %>
    </label>
    <div class="col-md-6">
      <%= f.text_field :package_name, :class => 'form-control input-md' %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      <%= f.label :cost %>
    </label>
    <div class="col-md-6">
      <%= f.text_field :cost, :class => 'form-control input-md' %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-4 control-label" for="p_number">
      <%= f.label :kilowatthour_consumption %>
    </label>
    <div class="col-md-6">
      <%= f.number_field :kilowatthour_consumption, :class => 'form-control input-md' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-10 control-label">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
  </div>
</fieldset>
<% end %>
