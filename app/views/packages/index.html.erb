<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Package name</th>
      <th>Cost</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.package_name %></td>
        <td><%= package.cost %></td>
        <td>
          <%= link_to 'Show', package %>
          <%= link_to 'Edit', edit_package_path(package) %>
          <%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %>
		<button onclick=window.location.href='/packages/<%= package.id%>' class="btn btn-info btn-xs">Show</button>
          <button onclick=window.location.href='/packages/<%= package.id%>/edit' class="btn btn-warning btn-xs">Edit</button>
          <button onclick=window.location.href='/packages/<%= package.id%>/destroy' class="btn btn-danger btn-xs">Destroy</button>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Package', new_package_path %>
