<p id="notice"><%= notice %></p>

<p>
  <strong>Package name:</strong>
  <%= @package.package_name %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @package.cost %>
</p>

<%= form_tag "add/#{params[:id]}" do%>
  <%=text_field_tag :component_id%><br>
  <%=number_field_tag :quantity%><br>  
  <%=submit_tag 'Add Component'%>
<%end%>



<% if @package.components.size > 0 then %>
<table class="table table-hover">
  <tr>
    <th>Component ID</th>
    <th>Description</th>
  </tr>
  
  <% @package.components.each do |c| %>
    <tr><td><%= c.component_id %></td><td><%= c.component_description%></td></tr>
  <%end%>
  
</table>

<% end %>
<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
