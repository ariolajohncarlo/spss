<p id="notice"><%= notice %></p>

<div class="col-md-4"></div>
<div class="col-md-4">
<table class="table table-bordered">

<p>
  <strong>Package name:</strong>
  <%= @package.package_name %>
</p>

<p>
  <strong>Cost:</strong>
  <%= number_with_precision(@package.cost, :precision => 2, :delimiter => ',') %>
</p>

<%= form_tag "add/#{params[:id]}" do%>
  <%=select_tag :component_id, options_for_select(Component.all.collect{|c| [c.component_description, c.id]}, include_blank: true, :class => 'form-control')%><br>
  <%=number_field_tag :quantity%><br>  
  <%=submit_tag 'Add Component'%>
<%end%>



<% if @package.components.size > 0 then %>
<table class="table table-hover">
  <tr>
    <th>Component ID</th>
    <th>Description</th>
  </tr>
  
  <% @package.components.each do |c| %>
    <tr>
      <td>
        <%= c.component_id %>
      </td>
      <td>
        <%= c.component_description%>
      </td>
  </tr>
  <%end%>
  
</table>

<% end %>
<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
