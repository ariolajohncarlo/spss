<p id="notice"><%= notice %></p>

<h1>Component Types</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_types.each do |component_type| %>
      <tr>
        <td><%= component_type.type_description %></td>
        <td class="action_area">
          <%= link_to 'Show', component_type %>
          <%= link_to 'Edit', edit_component_type_path(component_type) %>
          <%= link_to 'Destroy', component_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component Type', new_component_type_path %>
