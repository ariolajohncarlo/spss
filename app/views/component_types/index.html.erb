<p id="notice"><%= notice %></p>

<h1>Component Types</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_types.each do |component_type| %>
      <tr>
        <td><%= component_type.type_description %></td>
        <td class="action_area">
     <button onclick=window.location.href='/component_types/<%= component_type.id%>' class="btn btn-info btn-xs">Show</button>
          <button onclick=window.location.href='/component_types/<%= component_type.id%>/edit' class="btn btn-warning btn-xs">Edit</button>
          <button onclick=window.location.href='/component_types/<%= component_type.id%>/destroy' class="btn btn-danger btn-xs">Destroy</button>
   
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component Type', new_component_type_path %>
