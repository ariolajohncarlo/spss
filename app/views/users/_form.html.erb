<%= form_for(user, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

<div class="form-group">
   <label class="col-md-4 control-label" for="p_number">Username</label>
      <div class="col-md-6">
        <%= f.text_field :user_name, :class => 'form-control input-md'%>
      </div>
    </div>

<div class="form-group">
   <label class="col-md-4 control-label" for="p_number">Password</label>
      <div class="col-md-6">
        <%= f.text_field :password, :class => 'form-control input-md'%>
      </div>
    </div>
  
<div class="form-group">
      <label class="col-md-4 control-label" for="p_number">Type</label>
      <div class="col-md-6">
        <%= f.select(:type_id, Type.all.collect {|t| [t.user_description, t.id]}, {include_blank: true}, {:class => "form-control"}) %>
      </div>
    </div>


  <div class="form-group">
   <label class="col-md-4 control-label" for="p_number">Last Name</label>
      <div class="col-md-6">
        <%= f.text_field :last_name, :class => 'form-control input-md'%>
      </div>
    </div>

    <div class="form-group">
   <label class="col-md-4 control-label" for="p_number">First Name</label>
      <div class="col-md-6">
        <%= f.text_field :first_name, :class => 'form-control input-md'%>
      </div>
    </div>


  <div class="form-group">
   <label class="col-md-4 control-label" for="p_number">Middle Name</label>
      <div class="col-md-6">
        <%= f.text_field :middle_name, :class => 'form-control input-md'%>
      </div>
    </div>


  <div class="form-group">
      <div class="col-md-10 control-label">
        <%= f.submit 'Create User', :class => 'btn btn-success'%>
      </div>
       </div>

   </fieldset>
<% end %>

